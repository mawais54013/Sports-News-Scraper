
<main>
<div id="container">
    {{!-- each article here show the title, url and summary --}}
    {{#each articles}}
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md">
            <p><h4><a href="https://www.technewsworld.com/"+{{this.url}}>{{this.title}}</a></h4></p>
      {{!-- link to article  --}}
             <form action="/save" method="POST">
             {{!-- link to other handlebars --}}
                <input id="article-title" type="hidden" name="title" value="{{this.title}}">
                <input id="article-link" type="hidden" name="link" value={{this.link}}>
                <button type="submit" class="btn btn-default pull-right">Save This Article</button>
              </form>
        </div>
        
        <div class="col-md-4">
            <br>
            {{!-- summary of the article --}}
            {{this.summary}}  
        </div>
         <div class="col-md-2">
            
        </div>
    </div>
    <br>
    {{/each}}
</div>
</main>